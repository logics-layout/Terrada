            a.contact-slider__preview-section(href='#')
                .contact-slider__preview-imgBlock(style="background-image: url('%=static=%img/content/contact/2.jpg');")
            a.contact-slider__preview-section(href='#')
                .contact-slider__preview-imgBlock(style="background-image: url('%=static=%img/content/contact/3.jpg');")
            a.contact-slider__preview-section(href='#')
                .contact-slider__preview-imgBlock(style="background-image: url('%=static=%img/content/contact/4.jpg');")
            a.contact-slider__preview-section(href='#')
                .contact-slider__preview-imgBlock(style="background-image: url('%=static=%img/content/contact/2.jpg');")
    br
    .text-center
        button.btn.btn-orange.btn-lg Связаться с нами
    br

