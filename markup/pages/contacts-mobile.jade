            p
                a(href='#').db.color-white: span.color-white__title +7 (351) 777-90-68
                a(href='#').db.color-white: span.color-white__title +7 (351) 777-18-66
            a(href='#').db.color-white: span.color-white__title.color-white__title_viewBorder info@terrada.ru

    .contact-slider
        .contact-slider__main
            .contact-slider__main-section(style="background-image: url('%=static=%img/content/contact/1.jpg');")
